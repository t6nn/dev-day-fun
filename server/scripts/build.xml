<project name="Build All" default="compile-and-test" basedir=".">
    <description>
        simple example build file
    </description>

    <property name="projectdir" value="/dev/null"/>
    <property name="build" location="${projectdir}/out"/>

    <target name="compile" description="compile the source">
        <mkdir dir="${build}"/>
        <javac srcdir="${projectdir}" destdir="${build}" includeantruntime="false">
            <!--include name="Solution.java"/-->
        </javac>
    </target>

    <target name="compile-and-test" depends="compile">

    </target>

</project>